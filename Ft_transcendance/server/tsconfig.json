{
    "compilerOptions": {
      "target": "ES2021",  
      "module": "CommonJS", 
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,           
      "esModuleInterop": true,        
      "skipLibCheck": true,             
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src//*.ts", "src//.tsx", "src/**/.d.ts", "src/index.ts", "src/index.ts"]
  }
  